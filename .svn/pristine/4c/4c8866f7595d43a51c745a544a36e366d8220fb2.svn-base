<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qs.log.game.mapper.TaxesDirectlyWeekMapper" >
  <resultMap id="BaseResultMap" type="com.qs.log.game.model.TaxesDirectlyWeek" >
    <result column="mid" property="mid" jdbcType="INTEGER" />
    <result column="date" property="date" jdbcType="DATE" />
    <result column="paycount" property="paycount" jdbcType="INTEGER" />
    <result column="bindpeople" property="bindpeople" jdbcType="SMALLINT" />
    <result column="playtimes" property="playtimes" jdbcType="INTEGER" />
    <result column="rebatetotal" property="rebatetotal" jdbcType="INTEGER" />
    <result column="isaward" property="isaward" jdbcType="TINYINT" />
  </resultMap>
  <insert id="insert" parameterType="com.qs.log.game.model.TaxesDirectlyWeek" >
    insert into taxes_directly_week (mid, date, paycount, 
      bindpeople, playtimes, rebatetotal, 
      isaward)
    values (#{mid,jdbcType=INTEGER}, #{date,jdbcType=DATE}, #{paycount,jdbcType=INTEGER}, 
      #{bindpeople,jdbcType=SMALLINT}, #{playtimes,jdbcType=INTEGER}, #{rebatetotal,jdbcType=INTEGER}, 
      #{isaward,jdbcType=TINYINT})
  </insert>
  <sql id="Base_Column_List">
    mid,date,paycount,bindpeople,playtimes,rebatetotal,isaward
  </sql>
  <insert id="insertSelective" parameterType="com.qs.log.game.model.TaxesDirectlyWeek" >
    insert into taxes_directly_week
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="mid != null" >
        mid,
      </if>
      <if test="date != null" >
        date,
      </if>
      <if test="paycount != null" >
        paycount,
      </if>
      <if test="bindpeople != null" >
        bindpeople,
      </if>
      <if test="playtimes != null" >
        playtimes,
      </if>
      <if test="rebatetotal != null" >
        rebatetotal,
      </if>
      <if test="isaward != null" >
        isaward,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="mid != null" >
        #{mid,jdbcType=INTEGER},
      </if>
      <if test="date != null" >
        #{date,jdbcType=DATE},
      </if>
      <if test="paycount != null" >
        #{paycount,jdbcType=INTEGER},
      </if>
      <if test="bindpeople != null" >
        #{bindpeople,jdbcType=SMALLINT},
      </if>
      <if test="playtimes != null" >
        #{playtimes,jdbcType=INTEGER},
      </if>
      <if test="rebatetotal != null" >
        #{rebatetotal,jdbcType=INTEGER},
      </if>
      <if test="isaward != null" >
        #{isaward,jdbcType=TINYINT},
      </if>
    </trim>
  </insert>
  
  
    <update id="updateIsawardByCondition" parameterType="com.qs.log.game.model.TaxesDirectlyWeek" >
    update taxes_directly_week
    set isaward = 2
    where mid = #{mid,jdbcType=INTEGER} and date = #{date,jdbcType=DATE} and isaward=1
  </update>
  
    <select id="findTaxesDirectlyWeekByCondition" resultMap="BaseResultMap" parameterType="com.qs.log.game.model.TaxesDirectlyWeek" >
    select 
    <include refid="Base_Column_List" />
    from taxes_directly_week
    where  mid=#{mid,jdbcType=INTEGER} and date=#{date,jdbcType=DATE}
    limit 0,1
  </select>
  
  
  
    <!-- b.isaward=1 表示已审核，批量支付查询-->
  <select id="getWeekPayListByCondition" resultType="map" parameterType="map">
     SELECT FROM_UNIXTIME(a.mktime,'%Y-%m-%d %H:%i:%S') as mktime,a.mid,a.realname,a.phone,a.openid,
      b.bindpeople,b.paycount,b.isaward,b.rebatetotal,b.date
     FROM ${dbTable} a,
      taxes_directly_week b
     WHERE a.mid=b.mid
     AND b.isaward=1
     AND  b.date = #{searchDate}
     AND b.rebatetotal&gt;=1 and a.openid is not null
    order by b.rebatetotal 
    limit 0,300
  </select>
  
  <!-- b.isaward=1 表示已审核，未支付 -->
  <select id="getWeekPayInfoByDate" resultType="map" parameterType="map">
    SELECT FROM_UNIXTIME(a.mktime,'%Y-%m-%d %H:%i:%S') as mktime,a.mid,a.realname,a.phone,a.openid,
      b.bindpeople,b.paycount,b.isaward,b.rebatetotal,b.date
    FROM ${dbTable} a,
      taxes_directly_week b
    WHERE a.mid=b.mid
    <if test="isaward != null and isaward != ''">
      AND b.isaward=#{isaward}
    </if>
    <if test="isaward == null or isaward == ''">
      AND b.isaward=1
    </if>
    AND  b.date = #{searchDate}
    <if test="mid != null and mid != ''">
      and a.mid = #{mid}
    </if>
    order by b.rebatetotal desc
  </select>

  <!-- isaward=2 表示已支付的 -->
  <select id="getWeekPayHistoryDetailInfoByDate" resultType="map" parameterType="map">
    SELECT FROM_UNIXTIME(a.mktime,'%Y-%m-%d %H:%i:%S') as mktime,a.mid,a.realname,a.phone,a.openid,
    b.bindpeople,b.paycount,b.isaward,b.rebatetotal,b.date
    FROM ${dbTable} a,
    taxes_directly_week b
    WHERE a.mid=b.mid
    AND  b.date = #{searchDate}
    <if test="mid != null and mid != ''">
      and a.mid = #{mid}
    </if>
    order by b.rebatetotal desc
  </select>

</mapper>