  <!-- 牌局统计 -->
  <select id="queryBoardStatisticsByPage" parameterType="map" resultType="map">
    SELECT pr.mid,mf.`name`,FROM_UNIXTIME(mf.mtime,'%Y-%m-%d %H:%i:%s') AS RegTime,COUNT(pr.mid) AS allRecord
    FROM player_record pr
    INNER JOIN ${dbName}.memberfides0 mf
    ON mf.mid = pr.mid
    <where>
      <if test="mid != null and mid != ''">
        pr.mid = #{mid}
      </if>
    <if test="startTime != null and startTime != ''">
      AND FROM_UNIXTIME(pr.`timestamp`,'%Y-%m-%d') &gt;= #{startTime}
    </if>
      <if test="endTime != null and endTime != ''">
        AND FROM_UNIXTIME(pr.`timestamp`,'%Y-%m-%d') &lt;= #{endTime}
      </if>
    </where>
    GROUP BY pr.mid
    order by pr.id DESC
  </select>

  <!-- 牌局总数 -->
