@Controller
@RequestMapping(value = "/api/wx/")
public class WeixinController2 {


    @Resource
    private IWePayService2 wePayService2;

    private static final Logger logger = LoggerFactory.getLogger(WeixinController2.class);

    /**
     * 1.统一下单
     * @param request HttpServletRequest
     * @return
     */
    @ResponseBody
    @RequestMapping(value = "/unified/order2", method = RequestMethod.POST)
    public AppPayResponse appPay(HttpServletRequest request) {
        return wePayService2.unifiedOrder(request);
    }

    /**
     * 支付成功通知
     * @param request 请求对象
     * @return 处理结果
     */
    @RequestMapping("/pay/notify2")
    public String paid(HttpServletRequest request){
        String notifyXml = wePayService2.getPostRequestBody(request);
        if (notifyXml.isEmpty()){
            return wePayService2.notifyNotOk("body为空");
        }
        Map<String, Object> notifyParams = Maps.toMap(notifyXml);
        if (wePayService2.verifySign(notifyParams)){

            // TODO business logic

            logger.info("verify sign success: {}", notifyParams);
            return wePayService2.notifyOk();
        } else {
            logger.error("verify sign failed: {}", notifyParams);
            return wePayService2.notifyNotOk("签名失败");
        }
    }



}
