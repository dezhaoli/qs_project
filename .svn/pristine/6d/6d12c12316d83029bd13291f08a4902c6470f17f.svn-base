		<otherwise>
		 	and FROM_UNIXTIME(e.mktime,'%Y-%m-%d') = #{date,jdbcType=VARCHAR} and FROM_UNIXTIME(f.mtime,'%Y-%m-%d') = #{date,jdbcType=VARCHAR}
		</otherwise>
