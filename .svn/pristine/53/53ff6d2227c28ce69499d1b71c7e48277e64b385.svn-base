  <!-- 分页列表 -->
  <select id="queryListByPage" parameterType="map" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List" />
    from majiang_game_record
    WHERE
    (player1=#{mid,jdbcType=INTEGER}
    OR player2=#{mid,jdbcType=INTEGER}
    OR player3=#{mid,jdbcType=INTEGER}
    OR player4=#{mid,jdbcType=INTEGER}
    OR master=#{mid,jdbcType=INTEGER})
    ORDER BY date DESC
  </select>

  <!-- 战绩查询 -->
  <select id="queryGameRecordByPage" parameterType="map" resultType="map">
    SELECT 
      a.roomid , -- 房间号
      a.num, -- 牌局数
      a.date, -- 日期
      a.player1, -- 玩家1ID
      a.player2,-- 玩家2ID
      a.player3,-- 玩家3ID
      a.player4,-- 玩家4ID
      (SELECT substring_index(data_game, ';', 1)) AS datap1, -- 玩家1总论积分
      (SELECT substring_index(substring_index(data_game, ';', 2), ';', -1)) AS datap2, -- 玩家2总论积分
      (SELECT substring_index(substring_index(data_game, ';', 3), ';', -1)) AS datap3, -- 玩家3总论积分
      (SELECT substring_index(substring_index(data_game, ';', 4), ';', -1)) AS datap4, -- 玩家4总论积分
     (SELECT NAME FROM ${dbName}.memberfides0 b WHERE b.mid=a.player1 LIMIT 1) AS namep1, -- 玩家1名字
     (SELECT NAME FROM ${dbName}.memberfides0 b WHERE b.mid=a.player2 LIMIT 1) AS namep2, -- 玩家2名字
     (SELECT NAME FROM ${dbName}.memberfides0 b WHERE b.mid=a.player3 LIMIT 1) AS namep3, -- 玩家3名字
     (SELECT NAME FROM ${dbName}.memberfides0 b WHERE b.mid=a.player4 LIMIT 1) AS namep4 -- 玩家4名字
    FROM majiang_game_record a
    WHERE player1 = #{mid}
          OR player2 = #{mid}
          OR player3 = #{mid}
          OR player4 = #{mid}
    ORDER BY a.id DESC
  </select>

  <select id="getGameRecordParamList"  parameterType="map" resultMap="BaseResultMap">
  SELECT 
  <include refid="Base_Column_List" />
   FROM majiang_game_record WHERE  master=${mid} and date  &gt;=#{sDate} AND date &lt;=#{eDate} 
  <if test="user1 !=null and user1 != '' ">
    AND player1=${user1}
  </if>
  ORDER BY player1,date DESC 
  </select>
  
   <select id="getGameRecordParamCountList"  parameterType="map" resultType="map">
 	SELECT 
	g.player1,g.master,sum(g.pay) countGold,g.date,COUNT(g.id) oprenRoom,
	sum(case when g.player1>0 then 1  else 0 end)
	+sum(case when g.player2>0 then 1  else 0 end)
	+sum(case when g.player3>0 then 1  else 0 end)
	+sum(case when g.player4>0 then 1  else 0 end)  as countPlay,m.name name ,g.roomid roomid 
	FROM majiang_game_record g
	 LEFT JOIN  ${dbName}.memberfides0 m  on g.player1=m.mid
	where g.master=${mid} and g.date &gt;=#{sDate} AND g.date &lt;=#{eDate} 
  <if test="user1 !=null and user1 != '' ">
    AND g.player1=${user1}
  </if>
  GROUP BY  g.player1 ORDER BY g.date desc
  </select>
  
  <select id="getClubOpenRoomCountList" parameterType="map" resultType="map">
  SELECT g.player1,m.name,sum(g.pay) countGold,COUNT(g.id) room ,g.club_id ,
  IFNULL((SELECT sum(s.pay)  from majiang_game_record s where s.club_id=#{mid} and s.player1!=s.master and s.player1=m.mid),0) countAgentGold 
	from majiang_game_record g LEFT JOIN ${dbName} m ON g.player1 = m.mid  WHERE g.club_id=#{mid} and g.date &gt;=#{sDate} AND g.date &lt;=#{eDate} 
    <if test="player1 !=null and player1 != '' ">
		and g.player1=#{player1}
	</if>  
 	GROUP BY g.player1  ORDER by g.player1 desc
  </select>
  
	<select id="getClubRoomSumParam"  parameterType="map" resultType="map">
	 SELECT IFNULL(sum(g.pay),0) countGold,IFNULL(COUNT(g.id),0) room 
	from majiang_game_record g LEFT JOIN ${dbName} m ON g.player1 = m.mid  WHERE g.club_id=#{mid} and g.date &gt;=#{sDate} AND g.date &lt;=#{eDate} 
    <if test="player1 !=null and player1 != '' ">
		and g.player1=#{player1}
	</if>  
 	
  </select>
  
  
  <select id="getClubGameRecordParamList"  parameterType="map" resultMap="BaseResultMap">
  SELECT 
  <include refid="Base_Column_List" />
   from majiang_game_record where  club_id  = #{agentMid} and player1=#{player1}
   and date  &gt;=#{sDate} AND date &lt;=#{eDate} 
   ORDER BY date DESC 
