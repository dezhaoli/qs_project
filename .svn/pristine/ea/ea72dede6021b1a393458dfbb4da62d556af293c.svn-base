package com.qs.webside.agent.controller;

import com.qs.webside.sys.service.agent.service.IOpenOAuthService;
import com.riversoft.weixin.common.oauth2.OpenUser;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import javax.annotation.Resource;

/**
 * Created by zun.wei on 2017/3/12.
 * To change this template use File|Default Setting
 * |Editor|File and Code Templates|Includes|File Header
 */
@Controller
@RequestMapping(value = "/openOAuth")
public class OpenOAuthController {

    @Resource
    private IOpenOAuthService openOAuthService;

    @RequestMapping(value = "/test/go/view",method = RequestMethod.GET)
    public String testGo2OAuthView(Model model) {
        String url = openOAuthService.getAuthenticationUrl();
        model.addAttribute("oauthUrl",url);
        return "/WEB-INF/view/web/oauth/oathUi";
    }

    @RequestMapping(value = "/test/go/success",method = RequestMethod.GET)
    public String testGo2OAuthSuccessView(Model model,String code) {
        OpenUser openUser = openOAuthService.getOpenUserInfoByCode(code);
        System.out.println("openUser.getNickName = " + openUser.getNickName());
        return "/WEB-INF/view/web/oauth/oathSuccessUi";
    }


}
